{
  "info": {
    "name": "MI-IA.CO Backend API",
    "description": "Colección de Postman para probar la API de MI-IA.CO - Plataforma de empleados virtuales IA para WhatsApp",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "api_url",
      "value": "{{base_url}}/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "bot_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "contact_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Verificar el estado del servidor"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Registro de Usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"usuario@ejemplo.com\",\n  \"password\": \"contraseña123\",\n  \"name\": \"Juan Pérez\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/auth/signup",
              "host": ["{{api_url}}"],
              "path": ["auth", "signup"]
            },
            "description": "Registrar un nuevo usuario en la plataforma"
          },
          "response": []
        },
        {
          "name": "Inicio de Sesión",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"usuario@ejemplo.com\",\n  \"password\": \"contraseña123\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/auth/login",
              "host": ["{{api_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Iniciar sesión y obtener token de autenticación"
          },
          "response": []
        },
        {
          "name": "Información del Usuario",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/auth/me",
              "host": ["{{api_url}}"],
              "path": ["auth", "me"]
            },
            "description": "Obtener información del usuario actual"
          },
          "response": []
        },
        {
          "name": "Cerrar Sesión",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/auth/logout",
              "host": ["{{api_url}}"],
              "path": ["auth", "logout"]
            },
            "description": "Cerrar sesión del usuario"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Bots",
      "item": [
        {
          "name": "Crear Bot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bot Barbería\",\n  \"business_type\": \"barberia\",\n  \"description\": \"Barbería moderna especializada en cortes y arreglos\",\n  \"automation_types\": [\"citas\", \"atencion\"],\n  \"connect_calendar\": true,\n  \"whatsapp_number\": \"573001234567\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/bots/create",
              "host": ["{{api_url}}"],
              "path": ["bots", "create"]
            },
            "description": "Crear un nuevo bot de WhatsApp"
          },
          "response": []
        },
        {
          "name": "Listar Bots",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/bots/",
              "host": ["{{api_url}}"],
              "path": ["bots", ""]
            },
            "description": "Listar todos los bots del usuario"
          },
          "response": []
        },
        {
          "name": "Obtener Bot",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/bots/{{bot_id}}",
              "host": ["{{api_url}}"],
              "path": ["bots", "{{bot_id}}"]
            },
            "description": "Obtener detalles de un bot específico"
          },
          "response": []
        },
        {
          "name": "Actualizar Estado del Bot",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/bots/{{bot_id}}/status",
              "host": ["{{api_url}}"],
              "path": ["bots", "{{bot_id}}", "status"]
            },
            "description": "Activar/pausar un bot"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Contactos",
      "item": [
        {
          "name": "Listar Contactos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/contacts?bot_id={{bot_id}}",
              "host": ["{{api_url}}"],
              "path": ["contacts"],
              "query": [
                {
                  "key": "bot_id",
                  "value": "{{bot_id}}"
                }
              ]
            },
            "description": "Listar todos los contactos de un bot"
          },
          "response": []
        },
        {
          "name": "Obtener Contacto",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/contacts/{{contact_id}}",
              "host": ["{{api_url}}"],
              "path": ["contacts", "{{contact_id}}"]
            },
            "description": "Obtener detalles de un contacto incluyendo conversaciones"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Dashboard Principal",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/analytics/dashboard",
              "host": ["{{api_url}}"],
              "path": ["analytics", "dashboard"]
            },
            "description": "Obtener métricas generales del dashboard"
          },
          "response": []
        },
        {
          "name": "Analytics del Bot",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{api_url}}/analytics/bots/{{bot_id}}",
              "host": ["{{api_url}}"],
              "path": ["analytics", "bots", "{{bot_id}}"]
            },
            "description": "Obtener analytics detallados de un bot específico"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Webhook WhatsApp",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"from\": \"573001234567\",\n  \"text\": {\n    \"body\": \"Hola, quiero agendar una cita\"\n  },\n  \"timestamp\": \"1634567890\",\n  \"type\": \"text\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/webhooks/whatsapp",
              "host": ["{{api_url}}"],
              "path": ["webhooks", "whatsapp"]
            },
            "description": "Simular webhook de WhatsApp"
          },
          "response": []
        },
        {
          "name": "Webhook Wompi - Pago Aprobado",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Wompi-Signature",
                "value": "signature_aqui"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"transaction.updated\",\n  \"data\": {\n    \"transaction\": {\n      \"id\": \"txn_123456\",\n      \"status\": \"APPROVED\",\n      \"customer_email\": \"cliente@ejemplo.com\",\n      \"amount_in_cents\": 8000000\n    }\n  },\n  \"timestamp\": \"2023-10-18T10:30:00Z\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/webhooks/wompi",
              "host": ["{{api_url}}"],
              "path": ["webhooks", "wompi"]
            },
            "description": "Simular webhook de Wompi para pago aprobado"
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  }
}